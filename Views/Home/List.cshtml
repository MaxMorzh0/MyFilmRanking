@model List<MyFilmRanking.Models.Film>

@{
    ViewBag.Title = "Film List";
    Layout = "_Layout"; 
}


<style>
    .film-list {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        margin: 20px;
    }

    .film-item {
        width: 300px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
        border-radius: 5px;
        overflow: hidden;
    }

    .film-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }

    h3, p {
        padding: 10px;
        color: #fff; 
    }
</style>
<div class="container">

    <div class="film-list">
        @foreach (var film in Model)
        {
            <div class="film-item">
                <a href="@Url.Action("Film", "Home", new { id = film.Id })">
                    <img src="@film.ImageUrl" alt="@film.Title" class="film-image" />
                </a>
                <h3>@film.Title</h3>
                <p>@film.Description</p>
            </div>
        }
    </div>
</div>